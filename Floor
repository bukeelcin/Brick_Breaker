//FLOOR CLASS IS CHANGED DEPENDING ON FLOOR TEST CLASS
import java.awt.Color;
import java.awt.Graphics;
import java.awt.MouseInfo;
import java.awt.Point;
import java.awt.PointerInfo;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class Floor extends Brick {
	private int x, y, width, height;
	private Color color;

	public Floor(int x, int y, int width, int height) {

		super(x, y, width, height, Color.GREEN);

		if (x < 0 || x > 600) {
			throw new IllegalArgumentException("WRONG LOCATION");
		}
		if (y < 0 || y > 620) {
			throw new IllegalArgumentException("WRONG LOCATION");
		}
		if (width <= 0 || width > 40) {
			throw new IllegalArgumentException("WRONG WIDTH");
		}
		if (height <= 0 || height > 600) {
			throw new IllegalArgumentException("WRONG HEIGHT");
		}

		this.x = x;
		this.y = y;
		this.width = width;
		this.height = height;
	}

	public void drawOn(Graphics g) {
		g.setColor(Color.CYAN);
		g.fillRect(x, y, width, height);

		g.setColor(Color.RED);
		g.drawRect(x - 1, y - 1, width, height);
	}

	public int getX() {
		return x;
	}

	public int getY() {
		return y;
	}

	public void setX(int x) {
		this.x = x;
	}

	public void setY(int y) {
		this.y = y;
	}

	public int getWidth() {
		return width;
	}

}
